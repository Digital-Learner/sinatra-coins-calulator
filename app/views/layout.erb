<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coiny - A UK Coin Calculator</title>
    <link rel="stylesheet" href="stylesheets/app.css" />
    <script src="bower_components/modernizr/modernizr.js"></script>
  </head>
  <body>
    <div class="row">
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <!-- Title Area -->
          <li class="name"></li>
          <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
          <ul class="left">
            <li><a href="/" id="coiny">Coiny</a></li>
          </ul>
          <ul class="right">
            <li><a href="/about" id="about">About</a></li>
          </ul>
        </section>
      </nav>
      <div class='small-12 small-centered columns'>
      <div class='small-8 small-centered columns'>
        <img class='' id='main-img' src='/images/2013-Underground.jpeg' alt='2013 Underground 2 pound coin'>
      </div>
        <div data-alert class="alert-box round" id="flash-type">
          <%= styled_flash %>
          <a href="#" class="close">&times;</a>
        </div>
        <div class="small-9 small-centered columns">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= js :libs %>
    <%= js :application %>
  </body>
</html>
